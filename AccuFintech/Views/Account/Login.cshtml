@model AccuFintech.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.title Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/logincss.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="login-form shadow px-4">
            <h3 class="text-center text-dark mt-5">Login</h3>
            <p class="text-muted text-center">@ViewBag.title</p>

            <div class="row">
                <div class="col-md-12 col-12">
                    <div class="text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <form class="form mx-4 mt-4" action="/Account/Login" method="post">
                @Html.AntiForgeryToken()

                <div class="form-row m-0" style="display:none;">
                    <div class="col-md-12 col-sm-12 d-inline-flex align-items-center justify-content-lg-start">
                        @if (ViewBag.UserType == "ADMINISTRATOR")
                        {
                            <div class="form-check mr-3">
                                <input class="form-check-input searchType" type="radio" name="UserType" value="ADMINISTRATOR" checked />
                                <label class="form-check-label" for="searchType">Admin</label>
                            </div>
                        }
                        else if (ViewBag.UserType == "FRANCHAISE")
                        {
                            <div class="form-check mr-3">
                                <input class="form-check-input searchType" type="radio" name="UserType" value="FRANCHAISE" checked />
                                <label class="form-check-label" for="searchType">Franchaise</label>
                            </div>
                        }
                        else if (ViewBag.UserType == "STUDENT")
                        {
                            <div class="form-check mr-3">
                                <input class="form-check-input searchType" type="radio" name="UserType" value="STUDENT" checked />
                                <label class="form-check-label" for="searchType">Student</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Username" name="UserID">
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="Password">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success w-100">Sign In</button>
                    <a href="/StudentLogin/Login" class="btn btn-warning w-100 mt-1">Student Login</a>
                </div>

            </form>
        </div>
    }
    <script src="~/Scripts/JS/bootstrap.min.js"></script>
    <script src="~/Scripts/JS/jquery_3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
