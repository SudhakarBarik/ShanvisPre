@model AccuFintech.Models.BatchMaster

@{
    ViewBag.Title = "Batch List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Status"] != null)
{
    if (TempData["Status"].Equals("Ok"))
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Success!</strong> @TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Failed!</strong> @TempData["Message"]
        </div>
    }
}




<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h5 class="font-weight-bold">Batch Search</h5>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6 col-12">
                <div class="form-group row">
                    <label class="col-form-label col-md-4 col-12">Session</label>
                    <div class="col-md-8 col-sm-12">
                        @Html.DropDownListFor(model => model.Session, new SelectList(ViewBag.SessionList, "Key", "Value"), "--Select Session--", new { @class = "form-control" , id = "Sessionlist" })
                        @Html.ValidationMessageFor(model => model.Session, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-15">
                <div class="form-group row" style="margin-left:250px; position: relative;">
                    <input type='button' id="btnSession" value='New Batch' class="btn btn-success btn-sm" onclick='window.location = "@Url.Action("Create", "BatchMaster")";' />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-2">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-sm w-100" id="TBL_BatchMaster">
                <thead class="thead-dark">
                    <tr>
                        <th>BatchID</th>
                        <th>BatchName</th>
                        <th>CourseID</th>
                        <th>Session</th>
                        <th>StartDate</th>
                        <th>EndDate</th>
                        <th>Frequncy</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/ProjectScripts/Master/BatchMaster.js"></script>
